<script src="~/limonte-sweetalert2/sweetalert2.min.js"></script>
<script src="~/limonte-sweetalert2/sweetalert2.all.js"></script>
<link href="~/Sweetalert21223/sweetalert2.min.css" rel="stylesheet" />
<script src="~/Sweetalert21223/sweetalert2.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ajax-unobtrusive/3.2.6/jquery.unobtrusive-ajax.min.js"></script>


<script>
    function DeleteUser(UserId) {
        swal.fire({
            title: 'حذف کاربر',
            text: "کاربر گرامی از حذف کاربر مطمئن هستید؟",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#7cacbe',
            confirmButtonText: 'بله ، کاربر حذف شود',
            cancelButtonText: 'خیر'
        }).then((result) => {
            if (result.value) {
                var postData = {
                    'UserId': UserId,
                };

                $.ajax({
                    contentType: 'application/x-www-form-urlencoded',
                    dataType: "json",
                    type: "POST",
                    url: "Delete",
                    data: postData,
                    success: function (data) {
                        //if (data.status!=="success")
                        //if (data.status=="success")
                    if(data=='true')
                        {
                            swal.fire(
                                'موفق!',
                                data.message,
                                'success'
                            ).then(function (isConfirm) {
                                location.reload();

                            });
                        }
                        else {

                            swal.fire(
                                'گمشو کثافت بیشعور!',
                                data.message,
                                'warning'
                            );

                        }
                    },
                    error: function (request, status, error) {
                        alert(request.responseText);

                    }

                });

            }
        })
    }
</script>

